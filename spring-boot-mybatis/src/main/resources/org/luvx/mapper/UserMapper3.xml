<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.luvx.mapper.UserMapper3">
    <resultMap id="BaseResultMap" type="org.luvx.entity.User">
        <id column="id" property="userId" jdbcType="BIGINT"/>
        <result column="user_name" property="userName" jdbcType="VARCHAR"/>
        <result column="password" property="passWord" jdbcType="VARCHAR"/>
        <result column="age" property="age" javaType="INT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,
        user_name,
        password,
        age
    </sql>

    <delete id="batDeleteByPrimaryKey">
        delete from user
        <where>
            <foreach open="id in (" collection="collection" item="id" separator="," close=");">
                #{id}
            </foreach>
        </where>
    </delete>

    <update id="batUpdateByPrimaryKey">
        update user set password = #{param}
        <where>
            <foreach open="id in (" collection="ids" item="id" separator="," close=");">
                #{id}
            </foreach>
        </where>
    </update>

    <select id="batSelectByPrimaryKey" parameterType="java.util.Collection" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from
        user
        <where>
            <foreach open="id in (" collection="collection" item="id" index="index" separator="," close=");">
                #{id}
            </foreach>
        </where>
    </select>
</mapper>