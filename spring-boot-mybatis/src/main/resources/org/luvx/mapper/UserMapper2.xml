    <select id="selectSelective" resultMap="BaseResultMap" parameterType="org.luvx.entity.User">
        select
        <choose>
            <when test="selectColumns!=null and selectColumns != '' ">
                <![CDATA[ ${selectColumns} ]]>
            </when>
            <otherwise>
                <include refid="Base_Column_List"/>
            </otherwise>
        </choose>
        from user
        <where>
            <if test="userId != null">
                and id = #{userId}
            </if>
            <if test="userName != null">
